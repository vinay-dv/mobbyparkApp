<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="5dp"
    android:id="@+id/markerRelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF"
    >
        <ImageButton
            android:id="@+id/closeMarkerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_clear"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/Dt1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:textColor="#777777"
            android:layout_height="wrap_content"
            android:text="Ajanta Parking">
        </TextView>

        <TextView
            android:id="@+id/t2"
            android:layout_below="@+id/Dt1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#777777"
            android:layout_height="wrap_content"
            android:text="Chandni Chowk, A1 Block Road B-12
        \nDelhi 110040">
        </TextView>

        <TextView
            android:id="@+id/Dt3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:textSize="30sp"
            android:textColor="#777777"
            android:layout_height="wrap_content"
            android:text="â‚¹ 25">
        </TextView>
        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/Dt3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_height="wrap_content"
            android:text="Per Hour">
        </TextView>

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:text="slots"
            android:textColor="#777777"
            android:textSize="16sp"></TextView>
        <TextView
            android:id="@+id/t6"
            android:layout_below="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:textColor="#777777"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Availability">
        </TextView>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginRight="26dp"
            android:src="@drawable/v1"></ImageView>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t4"
            android:layout_marginTop="19dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/img1"
            android:src="@drawable/v2"></ImageView>

        <TextView
            android:id="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t6"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:text="Distance:"
            android:textColor="#00C3DC"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/t8"
            android:layout_below="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="25sp"
            android:textColor="#777777"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="1Km">
        </TextView>
        <TextView
            android:id="@+id/t9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t6"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/t7"
            android:layout_marginTop="25dp"
            android:text="Time:"
            android:textColor="#00C3DC"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/t10"
            android:layout_below="@+id/t9"
            android:layout_toRightOf="@id/t8"
            android:layout_width="wrap_content"
            android:layout_marginLeft="38dp"
            android:textSize="25sp"
            android:textColor="#777777"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="14 min">
        </TextView>

        <Button
            android:id="@+id/book"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@id/img2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-4dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/button_bg"
            android:clickable="true"
            android:elevation="5dp"
            android:onClick="click"
            android:text="Book"
            android:textColor="#FFFFFF"></Button>

        <View
            android:id="@+id/d6"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/book"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:background="#ffff" />
</RelativeLayout>
